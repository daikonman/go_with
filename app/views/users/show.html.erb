<% provide(:title, @user.name) %>
<div>
  <aside class="plofile">
    <section class="user_info">
      <h1>
        <% if @user.image? %>
          <%= image_tag @user.image.thumb50.url, class: "user-icon" %>
        <% else %>
          <%= image_tag "default.jpg", alt: "user-icon", size: "50", class: "user-icon" %>
        <% end %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="feed">
    <% if @user.microposts.any? %>
      <h3>行きたいところ (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>