<%= form_for(@user) do |f| %>
  <% if @user.image? %>
    <%= image_tag @user.image.url %>
  <% else %>
    <%= image_tag "/assets/default.jpg", :size => '100x100' %>
  <% end %>
    <button type="button" class="ui button">
       <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>
    </button>
  <%= f.submit '更新する', class: 'ui pink button' %>
<% end %>